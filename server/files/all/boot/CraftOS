-- vim: ft=lua
---@diagnostic disable: undefined-global, undefined-field

term.clear()
term.setTextColor(colors.yellow)
term.setCursorPos(1, 1)
print(os.version())
term.setTextColor(colors.white) -- draw the logo

---@diagnostic disable-next-line: unused-local
--local completion = require("cc.shell.completion")
shell.setPath(shell.path() .. ":/bin") -- autocompletes all files in /bin

for _, startup in pairs(fs.list("craftOsStartup")) do
	shell.run("craftOsStartup/" .. startup)
end

settings.clear()
if fs.exists(".settings") then
	settings.load(".settings")
end
if settings.get("motd.enable") then -- motd
	shell.run("motd")
end
